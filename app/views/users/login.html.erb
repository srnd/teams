<h1>Login</h1>
<div class="login-form">
  <table>
    <% if @application.is_a? Application %>
      <tr>
        <b><%= @application.name %></b> by <b><%= link_to @application.user.username, @application.user %></b> is requesting your public info. Sign in to allow this.
        <br><br>
      </tr>
    <% end %>
    <tr>
      <td>
        <h3 style="text-align: center">Have a legacy account?</h3>
        <%= form_for :user do |u| %>
        <p>
          <%= u.label :username %><br>
          <%= u.text_field :username %>
        </p>

        <p>
          <%= u.label :password %><br>
          <%= u.text_field :password, :type => "password" %>
        </p>

        <p>
          <%= u.submit "Log in" %>
        </p>
        <% end %>
      </td>
      <td>
        <a href="<%= @s5_sso_url %>"><s5-button>Log in with StudentRND s5</s5-button></a>
      </td>
    </tr>
  </table>
</div>
