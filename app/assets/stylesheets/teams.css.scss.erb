@-webkit-keyframes subtle-background-in{
  0%{
    background-size: 120%;
  }

  100%{
    background-size: 100%;
  }
}

@-webkit-keyframes subtle-background-in-team-image{
  0%{
    background-size: 75px 75px;
  }

  100%{
    background-size: 50px 50px;
  }
}

.team-header{
  color: white;
  padding-top: 200px;
  padding-bottom: 200px;
  width: 100%;
  text-align: center;
  background-image: url("http://cdn.pcwallart.com/images/gradient-background-wallpaper-4.jpg");
  background-position: center -200px;
  text-shadow: 0px 0px 19px #000;
  background-size: 100%;
  position: relative;
  -webkit-animation: subtle-background-in 1s backwards;

  .team-header-inner{
    z-index: 5;
    position: relative;
  }

  &::after{
    content: "";
    display: inline-block;
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.6);
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  h1{
    text-transform: uppercase;
  }
}

.team-short-description{
  font-size: 2.5em;
}

.team-member{
  width: 100%;
  display: inline-block;
  margin-bottom: 15px;

  .team-member-image{
    height: 50px;
    width: 50px;
    border-radius: 100%;
    background-size: 50px 50px;
    background-position: center center;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
    -webkit-animation: subtle-background-in-team-image 1s backwards;
    display: inline-block;
    vertical-align: middle;
    margin-right: 10px;
  }

  .team-member-name{
    display: inline-block;
    vertical-align: middle;
  }
}

.award{
  color: #d08e4b;
  font-weight: bold;
  display: inline-block;
  width: 100%;
  height: 50px;
  padding-left: 65px;
  background: url(<%= asset_path "trophy.svg" %>);
  background-size: 50px 50px;
  background-repeat: no-repeat;
  background-position: 0px 0px;
  line-height: 50px;
  margin-right: 15px;
}

.team-video{
  margin-bottom: 10px;
}

.no-margin-top{
  margin-top: 0;
}

.team-description img{
  max-width: 100%;
}

.team-section-right{
  padding-left: 30px;
  border-left: 1px solid #DEE8EF;
}

.center{
  text-align: center;
}
